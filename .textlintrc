{
  "filters": {},
  "rules": {
    "preset-japanese": {
      "sentence-length": {
        "max": 150
      },
      "max-ten": {
        "max": 3
      },
      "no-doubled-joshi": {
        "min_interval" : 1,
        "strict": false,
        "allow": ["も", "や", "か"],
        "separatorChars": ["、", "。", "?", "!", "？", "！", "「",  "」", "“", "”"]
      },
      "no-mix-dearu-desumasu": true,
    },
    "preset-jtf-style": {
      "1.2.1.句点(。)と読点(、)": true,
      "1.2.2.ピリオド(.)とカンマ(,)": true,
      "2.1.8.算用数字": true,
      "2.2.2.算用数字と漢数字の使い分け": true,
      "3.1.1.全角文字と半角文字の間": true,
      "3.1.2.全角文字どうし": true,
      // 「ICS MEDIAの校正ルール」では有効としていますが、以下の経緯でコメントアウトしています。
      //   - 「拡張機能のデフォルト設定」では、ルールを有効としていなかった。
      //   -  内容が「1.2.1.句点(。)と読点(、)」と重複している。
      // "4.1.3.ピリオド(.)、カンマ(,)": true,
      "4.3.2.大かっこ［］": true,
      "4.2.6.ハイフン(-)": true,
      "4.3.1.丸かっこ（）": true
    },
    "prh": {
      "rulePaths": ["./node_modules/textlint-rule-preset-icsmedia/dict/prh.yml"]
    }
  },
  "plugins": [
    "html",
    "latex2e",
    "review"
  ]
}
