{
  "extends": ["tslint:recommended"],
  "rules": {
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-duplicate-variable": true,
    "no-non-null-assertion": true,
    "curly": true,
    "class-name": true,
    "semicolon": [true, "always"],
    "triple-equals": true
  },
  "defaultSeverity": "warning"
}
